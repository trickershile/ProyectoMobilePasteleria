<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.Gustito.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@color/pastel_chocolate</item>
    </style>

    <style name="TextAppearance.Gustito.Body" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.Gustito.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/pastel_chocolate</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.Gustito.Button.Danger" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">#F44336</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>
